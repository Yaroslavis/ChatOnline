generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  username  String
  createdAt DateTime  @default(now())

  messages  Message[]
  chats     ChatMember[]
}

model Chat {
  id        Int          @id @default(autoincrement())
  name      String?
  createdAt DateTime      @default(now())

  messages  Message[]
  members   ChatMember[]
}

model Message {
  id        Int      @id @default(autoincrement())
  text      String
  createdAt DateTime @default(now())

  userId Int
  chatId Int

  user   User @relation(fields: [userId], references: [id])
  chat   Chat @relation(fields: [chatId], references: [id])
}

model ChatMember {
  id     Int  @id @default(autoincrement())
  userId Int
  chatId Int

  user User @relation(fields: [userId], references: [id])
  chat Chat @relation(fields: [chatId], references: [id])

  @@unique([userId, chatId])
}
